<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bonkers.cau.sims" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PopupAppActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="PopupAppActivity"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".PopupPhoneActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="PopupPhoneActivity"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <activity
            android:name=".AddEditActivity"
            android:label="@string/title_activity_add_edit" >`
        </activity>

        <receiver
            android:name=".KeyBroadCast"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.media.VOLUME_CHANGED_ACTION" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ListActivity"
            android:label="@string/title_activity_add_edit" >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>

        <service android:name=".MainService" >
        </service>

        <service
            android:name=".ShakeService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".SoundService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".ScreenService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <service
            android:name=".EarphoneService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <receiver
            android:name=".EarphoneReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.HEADSET_PLUG" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".ScreenReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.intent.action.SCREEN_OFF" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".TouchActivity"
            android:label="@string/title_activity_touch" >
        </activity>

        <service
            android:name=".TouchService"
            android:enabled="true"
            android:exported="true" >
        </service>


        <receiver
            android:name=".WidgetProvider"
            android:label="@string/title_activity_widget_provider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.sims.widget.ON" />
                <action android:name="com.sims.widget.OFF" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_basic" />
        </receiver>


        <receiver
            android:name=".ExcludeApp"
            android:label="@string/title_activity_exclude_app" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.media.VOLUME_CHANGED_ACTION" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
