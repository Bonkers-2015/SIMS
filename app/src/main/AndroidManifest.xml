<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bonkers.cau.sims" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.media_content_control"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PopupAppActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="PopupAppActivity"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".activity.PopupPhoneActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="PopupPhoneActivity"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <activity
            android:name=".activity.AddEditActivity"
            android:label="@string/title_activity_add_edit" >`
        </activity>

        <activity
            android:name=".activity.ListActivity"
            android:label="@string/title_activity_add_edit" >
        </activity>
        <activity
            android:name=".activity.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>

        <service android:name=".service.MainService" >
        </service>

        <service
            android:name=".service.ShakeService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".service.SoundService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".service.ScreenService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <service
            android:name=".service.EarphoneService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <service
            android:name=".service.VolumeService"
            android:enabled="true"
            android:exported="true" >
        </service>


        <!--     EarphoneReceiver 생성자 때문에 오류남, 실행하는데 영향 X             -->
        <receiver
            android:name=".receiver.EarphoneReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <receiver
            android:name=".receiver.VolumeReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>

        <receiver
            android:name=".receiver.ScreenReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.intent.action.SCREEN_OFF" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receiver.BootReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.TouchActivity"
            android:label="@string/title_activity_touch" >
        </activity>

        <service
            android:name=".service.TouchService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <receiver
            android:name=".WidgetProvider"
            android:label="@string/title_activity_widget_provider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.sims.widget.ON" />
                <action android:name="com.sims.widget.OFF" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_basic" />
        </receiver>


        <receiver
            android:name=".ExcludeApp"
            android:label="@string/title_activity_exclude_app" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>
</manifest>
