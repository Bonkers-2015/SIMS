<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    android:weightSum="93"
    tools:context="bonkers.cau.sims.activity.ExcludedAppActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="40dp"
        android:text="Exclude App List"
        android:gravity="center"
        android:layout_weight="40"
        android:layout_margin="10dp"/>

    <ListView
        android:id="@+id/listview_excluded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_margin="10dp">

    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_weight="43"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:background="@mipmap/save_cancel_bg">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:src="@mipmap/cancel"/>

                <bonkers.cau.sims.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:textSize="25dp"
                    android:textColor="#ff554181"
                    android:gravity="center"
                    app:typeface="fonts/210 appR.ttf"
                    android:text="cancel" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_excluded_cancle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:text="button" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:background="@mipmap/save_cancel_bg"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/save"
                    android:gravity="bottom"/>

                <bonkers.cau.sims.MyTextView
                    android:id = "@+id/txt_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:textColor="#ff554181"
                    android:gravity="center"
                    app:typeface="fonts/210 appR.ttf"
                    android:text="save" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_excluded_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:text="button"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
